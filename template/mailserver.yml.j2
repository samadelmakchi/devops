services:
  mailserver:
    image: docker.io/mailserver/docker-mailserver:latest
    container_name: mailserver
    hostname: mail
    domainname: {{ domain }}
    env_file: mailserver/config/dms-settings.env
    ports:
      - "25:25"
      - "143:143"
      - "465:465"
      - "587:587"
      - "993:993"
    volumes:
      - ./maildata:/var/mail
      - ./mailstate:/var/mail-state
      - ./maillogs:/var/log/mail
      - ./config:/tmp/docker-mailserver
    restart: always
    networks:
      - traefik_reverse_proxy

  roundcube:
    image: roundcube/roundcubemail:latest
    container_name: roundcube
    restart: always
    ports:
      - "4104:80"
    environment:
      ROUNDCUBEMAIL_DEFAULT_HOST: mailserver
      ROUNDCUBEMAIL_SMTP_SERVER: mailserver
      ROUNDCUBEMAIL_SMTP_PORT: 587
    depends_on:
      - mailserver
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.roundcube.rule=Host(`roundcube.{{ domain }}`)"
      - "traefik.http.routers.roundcube.entrypoints=websecure"
      - "traefik.http.routers.roundcube.tls.certresolver=myresolver"
      - "traefik.http.services.roundcube.loadbalancer.server.port=80"
    networks:
      - traefik_reverse_proxy

networks:
  traefik_reverse_proxy:
    external: true

volumes:
  maildata: 
  mailstate: 
  maillogs: 