services:
  moodle:
    container_name: moodle
    image: moodlehq/moodle-php-apache:latest
    restart: unless-stopped
    depends_on:
      - moodle_db
    environment:
      - MOODLE_DOCKER_DBTYPE=pgsql
      - MOODLE_DOCKER_DBNAME=moodle
      - MOODLE_DOCKER_DBUSER=moodle
      - MOODLE_DOCKER_DBPASS=your-db-password-change-me
      - MOODLE_DOCKER_DBHOST=moodle_db
      - MOODLE_DOCKER_WEB_HOST=https://moodle.{{ domain }}
      - MOODLE_DOCKER_SSL_PROXY=1
      - MOODLE_ADMIN=admin
      - MOODLE_ADMIN_PASSWORD=your-admin-password-change-me
      - MOODLE_ADMIN_EMAIL=admin@{{ domain }}
      - TZ=Etc/UTC
    volumes:
      - ./moodle/moodledata:/var/www/moodledata
      - ./moodle/html:/var/www/html
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.moodle.rule=Host(`moodle.{{ domain }}`)"
      - "traefik.http.routers.moodle.entrypoints=websecure"
      - "traefik.http.routers.moodle.tls=true"
      - "traefik.http.routers.moodle.tls.certresolver=myresolver"
      - "traefik.http.services.moodle.loadbalancer.server.port=80"
      - "traefik.http.routers.moodle-http.rule=Host(`moodle.{{ domain }}`)"
      - "traefik.http.routers.moodle-http.entrypoints=web"
      - "traefik.http.routers.moodle-http.middlewares=moodle-https-redirect"
      - "traefik.http.middlewares.moodle-https-redirect.redirectscheme.scheme=https"
      - "traefik.http.middlewares.moodle-https-redirect.redirectscheme.permanent=true"
    networks:
      - traefik_reverse_proxy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 60s
      timeout: 10s
      retries: 5
      start_period: 30s

  moodle_db:
    container_name: moodle_db
    image: postgres:15
    restart: unless-stopped
    environment:
      - POSTGRES_USER=moodle
      - POSTGRES_PASSWORD=your-db-password-change-me
      - POSTGRES_DB=moodle
    volumes:
      - ./moodle/db:/var/lib/postgresql/data
    networks:
      - traefik_reverse_proxy
    healthcheck:
      test: ["CMD", "pg_isready", "-U", "moodle"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s

networks:
  traefik_reverse_proxy:
    external: true
