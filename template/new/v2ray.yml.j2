services:
  x-ui:
    container_name: x-ui
    image: enwaiax/x-ui:latest
    restart: unless-stopped
    environment:
      - XUI_ADMIN_USERNAME=admin
      - XUI_ADMIN_PASSWORD=your-admin-password-change-me
      - XUI_PORT=54321
      - TZ=Etc/UTC
    volumes:
      - ./x-ui/db:/x-ui/db
      - ./x-ui/cert:/root/cert
    ports:
      - "10000-10100:10000-10100" # Range for V2Ray ports
      - "10000-10100:10000-10100/udp" # UDP for V2Ray
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.x-ui.rule=Host(`v2ray.{{ domain }}`)"
      - "traefik.http.routers.x-ui.entrypoints=websecure"
      - "traefik.http.routers.x-ui.tls=true"
      - "traefik.http.routers.x-ui.tls.certresolver=myresolver"
      - "traefik.http.services.x-ui.loadbalancer.server.port=54321"
      - "traefik.http.routers.x-ui-http.rule=Host(`v2ray.{{ domain }}`)"
      - "traefik.http.routers.x-ui-http.entrypoints=web"
      - "traefik.http.routers.x-ui-http.middlewares=x-ui-https-redirect"
      - "traefik.http.middlewares.x-ui-https-redirect.redirectscheme.scheme=https"
      - "traefik.http.middlewares.x-ui-https-redirect.redirectscheme.permanent=true"
    networks:
      - traefik_reverse_proxy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:54321"]
      interval: 60s
      timeout: 10s
      retries: 5
      start_period: 30s

  traefik:
    container_name: traefik
    image: traefik:v3.0
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
      - "10000-10100:10000-10100" # Forward V2Ray ports
      - "10000-10100:10000-10100/udp" # Forward V2Ray UDP ports
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./traefik/traefik.yml:/traefik.yml:ro
      - ./traefik/dynamic:/etc/traefik/dynamic
      - ./traefik/acme.json:/acme.json
    networks:
      - traefik_reverse_proxy
    healthcheck:
      test: ["CMD", "traefik", "healthcheck"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s

networks:
  traefik_reverse_proxy:
    external: true
