services:
  kimai:
    container_name: kimai
    image: lscr.io/linuxserver/kimai:latest
    restart: unless-stopped
    depends_on:
      - kimai_db
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - DATABASE_URL=mysql://kimai:your-db-password-change-me@kimai_db:3306/kimai?charset=utf8mb4&serverVersion=11.4
      - TRUSTED_PROXIES=127.0.0.1/32
      - ADMINMAIL=admin@{{ domain }}
      - ADMINPASS=your-admin-password-change-me
      - MAILER_FROM=noreply@{{ domain }}
      - MAILER_URL=smtp://your-smtp-user-change-me:your-smtp-password-change-me@smtp.gmail.com:587?encryption=tls&auth_mode=plain
    ports:
      - "8001:80"
      - "443:443"
    volumes:
      - ./kimai/config:/config
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.kimai.rule=Host(`kimai.{{ domain }}`)"
      - "traefik.http.routers.kimai.entrypoints=websecure"
      - "traefik.http.routers.kimai.tls=true"
      - "traefik.http.routers.kimai.tls.certresolver=myresolver"
      - "traefik.http.services.kimai.loadbalancer.server.port=80"
      - "traefik.http.routers.kimai-http.rule=Host(`kimai.{{ domain }}`)"
      - "traefik.http.routers.kimai-http.entrypoints=web"
      - "traefik.http.routers.kimai-http.middlewares=kimai-https-redirect"
      - "traefik.http.middlewares.kimai-https-redirect.redirectscheme.scheme=https"
      - "traefik.http.middlewares.kimai-https-redirect.redirectscheme.permanent=true"
    networks:
      - traefik_reverse_proxy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:80"]
      interval: 60s
      timeout: 10s
      retries: 5
      start_period: 30s

  kimai_db:
    container_name: kimai_db
    image: lscr.io/linuxserver/mariadb:latest
    restart: unless-stopped
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - MYSQL_ROOT_PASSWORD=your-root-password-change-me
      - MYSQL_DATABASE=kimai
      - MYSQL_USER=kimai
      - MYSQL_PASSWORD=your-db-password-change-me
    volumes:
      - ./kimai/db:/var/lib/mysql
    networks:
      - traefik_reverse_proxy
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "kimai", "-p${MYSQL_PASSWORD}"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s

networks:
  traefik_reverse_proxy:
    external: true